---
import AsesoresList from '../../components/AsesoresList.astro'
import VehicleSkeleton from '../../components/VehicleSkeleton.astro'
import CatalogCTA from '../../components/vehiculos/CatalogCTA.astro'
import CatalogShell from '../../components/vehiculos/CatalogShell.astro'
import FiltersCard from '../../components/vehiculos/FiltersCard.astro'
import HighlightsSection from '../../components/vehiculos/HighlightsSection.astro'
import ResultsSection from '../../components/vehiculos/ResultsSection.astro'
import { ASESORES } from '../../config/constants'
import Layout from '../../layouts/Layout.astro'
import { apiService } from '../../services/api'

let marcas: Awaited<ReturnType<typeof apiService.fetchMarcas>> = []

try {
  marcas = await apiService.fetchMarcas()
} catch (error) {
  console.error('No se pudieron cargar las marcas', error)
  marcas = []
}

// Metadatos SEO específicos para la página de vehículos
const seoData = {
  title: 'Catálogo de Vehículos Usados',
  description:
    'Explora nuestra amplia selección de vehículos usados de calidad. Filtra por marca, encuentra el auto perfecto y obtén asesoría personalizada. Garantía y financiamiento disponible.',
  keywords: [
    'catálogo autos usados',
    'vehículos usados',
    'carros segunda mano',
    'compra vehículos',
    'autos garantizados',
    'financiamiento vehicular',
    'asesoría automotriz',
    ...marcas.map(m => `${m.title} usados`).slice(0, 10),
  ],
  type: 'website' as const,
  author: 'RR Autos',
  siteName: 'RR Autos',
}
---

<Layout {...seoData}>
  <CatalogShell>
    <p class="catalog__loading-intro" aria-live="polite" data-state="loading" role="status">
      <span class="catalog__loading-dot" aria-hidden="true"></span>
      <span class="catalog__loading-text">Cargando catálogo de vehículos…</span>
    </p>
    <FiltersCard marcas={marcas} />

    <ResultsSection>
      <VehicleSkeleton />
    </ResultsSection>

    <AsesoresList asesores={ASESORES} />

    <HighlightsSection
      items={[
        {
          title: 'Stock curado',
          description: 'Seleccionamos solo unidades con historial claro, kilometraje real y mantenimiento documentado.',
        },
        {
          title: 'Entrega express',
          description:
            'Gestionamos matrícula, SOAT y transferencia para que recibas tu auto listo para circular en menos de 72 horas.',
        },
        {
          title: 'Postventa dedicada',
          description:
            'Accede a talleres aliados, recordatorios de mantenimiento y soporte continuo después de la compra.',
        },
      ]}
    />

    <CatalogCTA
      primaryHref="https://calendly.com/rr-autos/asesoria"
      primaryLabel="Reservar asesoría"
      secondaryHref="tel:+5112345678"
      secondaryLabel="Llamar ahora"
    />
  </CatalogShell>

  <script>
    import '../../scripts/vehiculosClient.ts'
  </script>

  <style>
    :global(.pagination) {
      display: inline-flex;
      align-items: center;
      gap: 0.45rem;
      border-radius: 9999px;
      background: transparent;
    }

    :global(.pagination__control),
    :global(.pagination__item) {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 2.45rem;
      height: 2.45rem;
      border-radius: 9999px;
      border: 1px solid rgba(var(--color-gray-400-rgb), 0.35);
      background: rgba(var(--color-white-rgb), 0.92);
      color: var(--color-gray-700);
      font-size: 0.95rem;
      font-weight: 600;
      box-shadow: 0 8px 18px -16px rgba(var(--color-gray-900-rgb), 0.45);
      transition:
        transform 0.18s ease,
        box-shadow 0.18s ease,
        background 0.18s ease,
        color 0.18s ease,
        border-color 0.18s ease;
      cursor: pointer;
    }

    :global(.pagination__control[data-act='prev']),
    :global(.pagination__control[data-act='next']) {
      width: 2.65rem;
      height: 2.65rem;
      font-size: 1.1rem;
      font-weight: 700;
    }

    :global(.pagination__item.is-active) {
      background: linear-gradient(135deg, var(--color-indigo), var(--color-indigo-dark));
      border-color: transparent;
      color: var(--color-white);
      box-shadow: 0 12px 26px -18px rgba(var(--color-indigo-dark-rgb), 0.75);
      transform: translateY(-2px);
      cursor: not-allowed;
    }

    :global(.pagination__item:not(.is-active):hover),
    :global(.pagination__control:not(.is-disabled):hover) {
      background: rgba(var(--color-gray-250-rgb), 0.75);
      border-color: rgba(var(--color-indigo-rgb), 0.35);
      color: var(--color-primary-hover);
      transform: translateY(-1px);
      box-shadow: 0 10px 20px -16px rgba(var(--color-gray-900-rgb), 0.45);
    }

    :global(.pagination__control.is-disabled) {
      opacity: 0.4;
      cursor: not-allowed;
      color: var(--color-gray-400);
      background: rgba(var(--color-gray-80-rgb), 0.85);
      border-color: rgba(var(--color-gray-350-rgb), 0.5);
      box-shadow: none;
    }

    :global(.pagination__ellipsis) {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 1.75rem;
      color: rgba(var(--color-gray-500-rgb), 0.65);
      font-size: 1rem;
      font-weight: 700;
    }

    :global(.pagination__item:focus-visible),
    :global(.pagination__control:focus-visible) {
      outline: 2px solid rgba(var(--color-indigo-rgb), 0.5);
      outline-offset: 2px;
    }

    @media (max-width: 640px) {
      :global(.pagination) {
        gap: 0.25rem;
      }

      :global(.pagination__control),
      :global(.pagination__item) {
        width: 2rem;
        height: 2rem;
        font-size: 0.8rem;
      }

      :global(.pagination__control[data-act='prev']),
      :global(.pagination__control[data-act='next']) {
        width: 2.1rem;
        height: 2.1rem;
        font-size: 0.95rem;
      }
    }

    @media (max-width: 480px) {
      :global(.pagination) {
        gap: 0.2rem;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 100%;
      }

      :global(.pagination__control),
      :global(.pagination__item) {
        width: 1.85rem;
        height: 1.85rem;
        font-size: 0.75rem;
      }

      :global(.pagination__control[data-act='prev']),
      :global(.pagination__control[data-act='next']) {
        width: 2rem;
        height: 2rem;
        font-size: 0.9rem;
      }

      :global(.pagination__item.is-active),
      :global(.pagination__item:not(.is-active):hover),
      :global(.pagination__control:not(.is-disabled):hover) {
        transform: none;
        box-shadow: 0 6px 14px -14px rgba(15, 23, 42, 0.4);
      }

      :global(.pagination__ellipsis) {
        width: 1.3rem;
      }
    }

    .catalog__loading-intro {
      display: inline-flex;
      align-items: center;
      position: absolute;
      gap: 0.6rem;
      margin: 1rem 1rem 1.5rem;
      padding: 0.6rem 1.05rem 0.6rem 0.85rem;
      border-radius: 9999px;
      border: 1px solid rgba(var(--color-gray-200-rgb), 0.65);
      background: linear-gradient(
        135deg,
        rgba(var(--color-white-rgb), 0.98),
        rgba(var(--color-primary-tint-rgb), 0.32)
      );
      color: rgba(var(--color-gray-600-rgb), 0.96);
      font-size: 0.98rem;
      font-weight: 600;
      letter-spacing: -0.005em;
      box-shadow:
        0 22px 48px -30px rgba(var(--color-gray-900-rgb), 0.6),
        0 0 0 1px rgba(var(--color-primary-rgb), 0.08);
      justify-self: end;
      z-index: 2;
    }

    .catalog__loading-dot {
      position: relative;
      display: inline-grid;
      place-items: center;
      width: 0.75rem;
      height: 0.75rem;
      border-radius: 9999px;
      background: radial-gradient(
        circle,
        var(--color-primary) 35%,
        rgba(var(--color-primary-rgb), 0.6) 70%,
        transparent 100%
      );
      box-shadow: 0 0 0 0 rgba(var(--color-primary-rgb), 0.4);
    }

    .catalog__loading-intro[data-state='loading'] .catalog__loading-dot {
      animation: catalogLoadingPulse 1.5s ease-in-out infinite;
    }

    .catalog__loading-intro[data-state='ready'] .catalog__loading-dot {
      background: radial-gradient(
        circle,
        var(--color-success) 35%,
        rgba(var(--color-success-rgb), 0.45) 70%,
        transparent 100%
      );
      animation: catalogLoadingPulseSuccess 1.2s ease-in-out 1;
    }

    .catalog__loading-intro[data-state='error'] .catalog__loading-dot {
      background: radial-gradient(
        circle,
        var(--color-error, #dc2626) 35%,
        rgba(220, 38, 38, 0.5) 70%,
        transparent 100%
      );
      animation: catalogLoadingPulseError 1.6s ease-in-out infinite;
    }

    .catalog__loading-text {
      white-space: nowrap;
    }

    .catalog__loading-intro[data-state='ready'] .catalog__loading-text {
      color: rgba(var(--color-success-rgb), 0.95);
    }

    .catalog__loading-intro[data-state='error'] .catalog__loading-text {
      color: rgba(220, 38, 38, 0.92);
    }

    @media (max-width: 960px) {
      .catalog__loading-intro {
        justify-self: stretch;
        justify-content: space-between;
        padding: 0.65rem 1.1rem;
      }
    }

    @media (max-width: 640px) {
      .catalog__loading-intro {
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 1.2rem;
        text-align: center;
        line-height: 1.3;
      }

      .catalog__loading-text {
        white-space: normal;
      }
    }

    .catalog__loading-intro[data-state='ready'] .catalog__loading-dot,
    .catalog__loading-intro[data-state='error'] .catalog__loading-dot {
      box-shadow: none;
    }

    .catalog__loading-intro[hidden] {
      display: none;
    }

    @keyframes catalogLoadingPulse {
      0% {
        box-shadow: 0 0 0 0 rgba(var(--color-primary-rgb), 0.4);
      }

      50% {
        box-shadow: 0 0 0 0.45rem rgba(var(--color-primary-rgb), 0);
      }

      100% {
        box-shadow: 0 0 0 0 rgba(var(--color-primary-rgb), 0);
      }
    }

    @keyframes catalogLoadingPulseSuccess {
      0% {
        box-shadow: 0 0 0 0 rgba(var(--color-success-rgb), 0.45);
      }

      45% {
        box-shadow: 0 0 0 0.4rem rgba(var(--color-success-rgb), 0);
      }

      100% {
        box-shadow: 0 0 0 0 rgba(var(--color-success-rgb), 0);
      }
    }

    @keyframes catalogLoadingPulseError {
      0% {
        box-shadow: 0 0 0 0 rgba(220, 38, 38, 0.5);
      }

      55% {
        box-shadow: 0 0 0 0.45rem rgba(220, 38, 38, 0);
      }

      100% {
        box-shadow: 0 0 0 0 rgba(220, 38, 38, 0);
      }
    }

    .catalog__highlights {
      display: grid;
      gap: 1.75rem;
    }

    .catalog__highlights header {
      display: grid;
      gap: 0.75rem;
      max-width: 40rem;
    }

    .highlights-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
    }

    .highlight {
      background: rgba(255, 255, 255, 0.93);
      border-radius: 1.25rem;
      border: 1px solid rgba(var(--color-gray-400-rgb), 0.28);
      padding: 1.6rem;
      box-shadow: 0 22px 45px -36px rgba(var(--color-primary-shadow-rgb), 0.45);
      display: grid;
      gap: 0.75rem;
    }

    .highlight h3 {
      margin: 0;
      font-size: 1.15rem;
      color: var(--color-gray-900);
    }

    .catalog__cta .cta-card {
      background: linear-gradient(140deg, var(--color-primary-hover), var(--color-primary-contrast));
      color: var(--color-white);
      border-radius: 1.75rem;
      padding: clamp(2rem, 4.5vw, 3rem);
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      gap: 1.5rem;
      box-shadow: 0 35px 65px -42px rgba(var(--color-primary-shadow-rgb), 0.8);
    }

    .cta-card__content {
      display: grid;
      gap: 0.75rem;
      max-width: 32rem;
    }

    .cta-card__content h2 {
      color: var(--color-white);
    }

    .cta-card__content p {
      color: rgba(var(--color-gray-250-rgb), 0.85);
    }

    .cta-card__actions {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      align-items: center;
    }

    .cta-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      border-radius: 9999px;
      padding: 0.9rem 1.6rem;
      font-weight: 600;
      font-size: 0.98rem;
      text-decoration: none;
      transition:
        transform 150ms ease,
        box-shadow 150ms ease,
        background-color 150ms ease,
        color 150ms ease;
    }

    .cta-btn--primary {
      background: var(--color-white);
      color: var(--color-primary-hover);
      box-shadow: 0 15px 40px -18px rgba(var(--color-white-rgb), 0.9);
    }

    .cta-btn--primary:hover,
    .cta-btn--primary:focus-visible {
      transform: translateY(-1px);
      box-shadow: 0 18px 45px -16px rgba(var(--color-white-rgb), 0.85);
    }

    .cta-btn--ghost {
      border: 1px solid rgba(var(--color-gray-250-rgb), 0.4);
      color: var(--color-gray-250);
    }

    .cta-btn--ghost:hover,
    .cta-btn--ghost:focus-visible {
      background: rgba(var(--color-gray-250-rgb), 0.18);
    }

    @media (max-width: 768px) {
      .results-header {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    @media (max-width: 640px) {
      .catalog {
        padding-left: 1.25rem;
        padding-right: 1.25rem;
      }

      .filters-card footer {
        flex-direction: column;
      }

      .cta-card__actions {
        width: 100%;
      }

      .cta-btn {
        width: 100%;
      }

      .catalog__stats div {
        padding: 0.85rem 1rem;
      }
    }

    @media (max-width: 900px) {
      .catalog {
        padding-top: clamp(2rem, 6vw, 2.6rem);
      }

      .catalog__filters .filters-card,
      .catalog__results,
      .catalog__cta .cta-card {
        padding: clamp(1.2rem, 4vw, 1.7rem);
      }

      .filters-card header {
        gap: 0.45rem;
      }

      .filters-card footer {
        flex-direction: column;
        align-items: flex-start;
      }

      .filters-link {
        width: auto;
        justify-content: flex-start;
      }

      .results-header {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    @media (max-width: 640px) {
      .catalog {
        padding-left: 1rem;
        padding-right: 1rem;
      }

      .catalog__inner {
        width: min(1160px, calc(100% - 0.25rem));
      }

      .catalog__filters .filters-card {
        border-radius: 1.15rem;
        gap: 0.9rem;
      }

      .filters-card h1,
      .filters-card h2 {
        font-size: clamp(1.6rem, 6vw, 2rem);
      }

      .filters-card footer {
        gap: 0.6rem;
      }

      .catalog__results {
        padding: clamp(1.2rem, 6vw, 1.6rem);
        border-radius: 1.35rem;
      }

      .results-grid {
        min-height: 320px;
      }

      .catalog__highlights header,
      .cta-card__content {
        gap: 0.55rem;
      }

      .cta-card__actions {
        width: 100%;
        gap: 0.6rem;
      }

      .cta-card__actions .cta-btn {
        width: 100%;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .catalog {
        padding-top: clamp(1.75rem, 7vw, 2.1rem);
      }

      .catalog__filters .filters-card {
        padding: clamp(1.05rem, 6vw, 1.4rem);
        gap: 0.75rem;
      }

      .filters-card h1,
      .filters-card h2 {
        font-size: clamp(1.4rem, 7vw, 1.85rem);
      }

      .filters-card footer p {
        font-size: 0.9rem;
      }

      .filters-link {
        width: 100%;
        justify-content: center;
      }

      .catalog__results {
        padding: clamp(1rem, 6vw, 1.4rem);
      }

      .catalog__cta .cta-card {
        padding: clamp(1.1rem, 6vw, 1.5rem);
        border-radius: 1.25rem;
      }

      .cta-card__actions {
        gap: 0.5rem;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .cta-btn,
      .catalog-card,
      .highlight,
      .catalog__results,
      .filters-card {
        transition: none;
        box-shadow: none;
      }
    }
  </style>
</Layout>
