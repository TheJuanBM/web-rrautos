---
import type { Asesor } from '../types'

interface Props {
  asesores: Asesor[]
}

const { asesores } = Astro.props
---

<section class="advisors-card" aria-label="Equipo de asesores">
  <header class="advisors-card__header">
    <p class="advisors-card__eyebrow">Equipo experto</p>
    <h3 class="advisors-card__title">Conecta con tu asesor ideal</h3>
    <p class="advisors-card__subtitle">
      Elige a la persona que te acompañará en todo el proceso: desde resolver dudas hasta coordinar la entrega.
    </p>
  </header>

  <ul class="advisors-card__list">
    {
      asesores.map(asesor => (
        <li class="advisors-card__item">
          <span class="advisors-card__initial" aria-hidden="true">
            {asesor.inicial}
          </span>
          <div class="advisors-card__info">
            <span class="advisors-card__name">{asesor.nombre}</span>
            <span class="advisors-card__label">Respuesta en minutos</span>
          </div>
          <a
            href={`https://wa.me/51${asesor.id}`}
            class="advisors-card__cta"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Abrir WhatsApp con ${asesor.nombre}`}
          >
            Chatear
          </a>
        </li>
      ))
    }
  </ul>
</section>
