---
import ImageCarousel from '../../components/ImageCarousel.astro'
import VehicleHighlights from './VehicleHighlights.astro'

export interface VehicleHeroProps {
  title: string
  highlights: { label: string; value: string }[]
  carouselImages: { id?: string; url: string; alt?: string | null }[]
  hasGallery: boolean
}

const { title, highlights = [], carouselImages = [], hasGallery } = Astro.props as VehicleHeroProps
---

<header class="vehicle-detail__hero">
  <div class="hero__info">
    <h1 itemprop="name">{title}</h1>
    <p class="hero__subtitle">Ficha t√©cnica, precio y disponibilidad actualizada.</p>

    <div class="hero__actions">
      <slot name="actions" />
    </div>

    <div class="hero__divider"></div>

    <VehicleHighlights items={highlights} />
  </div>

  <div class="hero__media">
    {
      hasGallery ? (
        <ImageCarousel images={carouselImages} title={title} />
      ) : (
        <div class="hero__media-placeholder" aria-hidden="true" />
      )
    }
  </div>
</header>

<style>
  .vehicle-detail__hero {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1.05fr);
    padding: clamp(1.8rem, 4vw, 2.4rem);
    gap: clamp(1.6rem, 4vw, 2.4rem);
    border-radius: 2rem;
    background: #fff;
    border: 1px solid rgba(148, 163, 184, 0.18);
    box-shadow: 0 28px 80px -60px rgba(15, 23, 42, 0.42);
    position: relative;
    align-items: start;
  }

  .hero__info {
    position: relative;
    display: grid;
    gap: 1rem;
    z-index: 1;
    max-width: 32rem;
  }

  .hero__info h1 {
    margin: 0;
    font-weight: 600;
    font-size: clamp(2.3rem, 5.5vw, 3.1rem);
    color: var(--color-gray-900);
    letter-spacing: -0.02em;
    line-height: 1.05;
    text-shadow: 0 10px 35px rgba(15, 23, 42, 0.15);
  }

  .hero__subtitle {
    margin: 0;
    color: rgba(71, 85, 105, 0.85);
    font-size: 1.05rem;
    max-width: 38ch;
  }

  .hero__divider {
    height: 1px;
    background: linear-gradient(90deg, rgba(148, 163, 184, 0), rgba(148, 163, 184, 0.35), rgba(148, 163, 184, 0));
    margin: clamp(0.8rem, 2vw, 1.2rem) 0;
  }

  .hero__media {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    gap: clamp(1rem, 2.2vw, 1.6rem);
    position: relative;
    width: 100%;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.25rem;
  }

  .hero__actions :global(.hero__cta) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
    padding: 0.85rem 1.75rem;
    border-radius: 9999px;
    text-decoration: none;
    font-weight: 600;
    letter-spacing: 0.01em;
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease,
      background 0.18s ease,
      color 0.18s ease;
    position: relative;
    overflow: hidden;
  }

  .hero__actions :global(.hero__cta--primary) {
    background: linear-gradient(135deg, #2563eb, #4f46e5);
    color: var(--color-white);
    box-shadow: 0 22px 45px -20px rgba(37, 99, 235, 0.55);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .hero__actions :global(.hero__cta--secondary) {
    border: 1px solid rgba(59, 130, 246, 0.28);
    color: var(--color-primary-contrast);
    background: rgba(255, 255, 255, 0.95);
  }

  .hero__actions :global(.hero__cta--ghost) {
    border: 1px dashed rgba(100, 116, 139, 0.38);
    color: rgba(71, 85, 105, 0.9);
    background: rgba(255, 255, 255, 0.85);
  }

  .hero__actions :global(.hero__cta:hover),
  .hero__actions :global(.hero__cta:focus-visible) {
    transform: translateY(-2px);
    box-shadow: 0 28px 60px -26px rgba(37, 99, 235, 0.4);
  }

  .hero__media-placeholder {
    height: clamp(260px, 40vw, 400px);
    border-radius: 1.5rem;
    background: repeating-linear-gradient(
      135deg,
      rgba(148, 163, 184, 0.3),
      rgba(148, 163, 184, 0.3) 10px,
      rgba(30, 41, 59, 0.15) 10px,
      rgba(30, 41, 59, 0.15) 20px
    );
  }

  @media (max-width: 1000px) {
    .vehicle-detail__hero {
      grid-template-columns: 1fr;
      padding: clamp(1.5rem, 5vw, 2rem);
      gap: clamp(1.4rem, 4vw, 2rem);
    }

    .hero__info {
      max-width: 100%;
    }

    .hero__media {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .hero__actions {
      flex-direction: column;
      align-items: stretch;
    }

    .hero__actions :global(.hero__cta) {
      width: 100%;
      justify-content: center;
    }
  }
</style>
