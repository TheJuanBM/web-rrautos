---
interface Highlight {
  title: string
  description: string
}

interface Props {
  items: Highlight[]
  eyebrow?: string
  lead?: string
}

const {
  items = [],
  eyebrow = 'Lo que nos diferencia',
  lead = 'Desde la inspección hasta la entrega, cuidamos cada detalle para que disfrutes tu auto desde el primer día. Sin trámites extensos ni sorpresas ocultas.',
} = Astro.props
---

<section class="catalog__highlights" aria-labelledby="highlights-title">
  <header>
    <p class="section-eyebrow">{eyebrow}</p>
    <p>{lead}</p>
  </header>

  <div class="highlights-grid">
    {
      items.map(item => (
        <article class="highlight">
          <h3>{item.title}</h3>
          <p>{item.description}</p>
        </article>
      ))
    }
  </div>
</section>

<style>
  .catalog__highlights {
    display: grid;
    gap: 1.75rem;
  }

  .catalog__highlights header {
    display: grid;
    gap: 0.75rem;
    max-width: 40rem;
  }

  .catalog__highlights p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .highlights-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .highlight {
    background: rgba(var(--surface-card-rgb), 0.9);
    border-radius: 1.25rem;
    border: 1px solid var(--surface-border);
    padding: 1.6rem;
    box-shadow: 0 22px 45px -36px rgba(var(--surface-panel-rgb), 0.5);
    display: grid;
    gap: 0.75rem;
  }

  .highlight h3 {
    margin: 0;
    font-size: 1.15rem;
    color: var(--text-primary);
  }
</style>
