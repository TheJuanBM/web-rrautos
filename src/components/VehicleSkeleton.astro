---
interface Props {
  count?: number
}

const { count = 9 } = Astro.props
---

<div class="vehicle-card-grid">
  {
    Array.from({ length: count }).map(() => (
      <article class="vehicle-card vehicle-card--skeleton" aria-hidden="true">
        <div class="vehicle-card__media">
          <div class="vehicle-card__image vehicle-card__image--skeleton" />
        </div>

        <div class="vehicle-card__body">
          <div class="vehicle-card__info">
            <div class="skeleton skeleton--line skeleton--title" />
            <div class="skeleton skeleton--line skeleton--subtitle" />
          </div>

          <div class="skeleton skeleton--button" />
        </div>
      </article>
    ))
  }
</div>
