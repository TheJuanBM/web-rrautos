---
interface Props {
  count?: number
}

const { count = 9 } = Astro.props
---

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-4">
  {
    Array.from({ length: count }).map(() => (
      <div class="bg-white border border-gray-200 rounded-lg p-3 shadow-sm animate-pulse">
        <div class="w-full h-28 md:h-32 bg-gray-200 rounded-md" />
        <div class="h-3 bg-gray-200 rounded w-2/3 mt-3" />
        <div class="h-3 bg-gray-200 rounded w-1/3 mt-2" />
        <div class="h-7 bg-gray-200 rounded-md w-24 mt-3" />
      </div>
    ))
  }
</div>
